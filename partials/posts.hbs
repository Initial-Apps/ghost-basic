{{#foreach posts}}

<div class="{{post_class}} col">
    <div class="card h-100">
        {{#if feature_image}}
        <img src="{{img_url feature_image}}" class="card-img-top" alt="{{title}}">
        {{/if}}
        {{#if primary_tag}}
        <span class="badge badge-success">{{primary_tag.name}}</span>
        {{/if}}
        <div class="card-body">
            <h5 class="card-title">
                <a style="text-decoration-line: none;" href="{{url}}">{{title}}</a>
            </h5>
            <p class="card-text">{{excerpt words="33"}}</p>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col">
                    <small>{{date published_at timeago="true"}}</small>
                </div>
                <div class="col text-end">
                    <small class="reading-time">{{reading_time}}</small>
                </div>                
            </div>
        </div>
    </div>
</div>

{{/foreach}}